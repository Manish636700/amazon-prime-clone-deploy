pipeline {
    agent any
    
    options {
        disableConcurrentBuilds()
        timestamps()
        buildDiscarder(logRotator(numToKeepStr: '20'))
        timeout(time: 30, unit: 'MINUTES')
        skipStagesAfterUnstable()
    }
    
    environment {
        AWS_REGION              = "us-east-1"
        ECR_REPO                = "amazon-prime-prod"
        IMAGE_TAG               = "${BUILD_NUMBER}"
        AWS_ACCESS_KEY          = credentials('aws-access-key')
        AWS_SECRET_ACCESS_KEY   = credentials('aws-secret-key')
       }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                url: 'https://github.com/Manish636700/amazon-prime-clone-deploy.git'
            }
        }
        
        stage('Install Dependencies'){
            steps {
                sh 'npm ci'
            }
        }
        
        stage('Unit Tests & Coverage'){
            steps {
                sh 'npm test -- --coverage --passWithNoTests'
            }
        }
        
        stage('SonarQube Analysis'){
            environment {
                scannerHome   = tool 'sonar-scanner'
            }
            steps {
               withSonarQubeEnv('sonarqube') {
                   sh """ 
                    ${scannerHome}/bin/sonar-scanner \
                    -Dsonar.projectKey=amazon-prime-clone \
                    -Dsonar.sources=.\
                    -Dsonar.javascript.lcov.reportPaths=coverage/lcov.info
                    """
               }
            }
        }
        stage('Quality Gate (BLOCKING)'){
            steps {
                timeout(time: 10, unit: 'MINUTES'){
                    waitForQualityGate abortPipeline: true
                }
            }
        }
        
        stage('Dependency & Secret Scan') {
            steps {
                sh ''' 
                trivy fs \
                --scanners vuln,secret,license \
                --severity HIGH,CRITICAL \
                --ignore-unfixed \
                --exit-code 1 \
                .
                '''
            }
        }
    
    }
}


        stage('Docker Build (Non-Root Image)') {
            steps {
                sh 'docker build -t $ECR_REPO:$IMAGE_TAG .'
            }
        }

        stage('Container Image Scan (BLOCKING)') {
            steps {
                sh '''
                  trivy image \
                  $ECR_REPO:$IMAGE_TAG \
                  --severity HIGH,CRITICAL \
                  --exit-code 1
                '''
            }
        }

        /* -------------------- ARTIFACT TRUST -------------------- */

        stage('Login to AWS ECR') {
            environment {
                AWS_ACCESS_KEY_ID     = credentials('aws-access-key')
                AWS_SECRET_ACCESS_KEY = credentials('aws-secret-key')
            }
            steps {
                sh '''
                aws ecr get-login-password --region $AWS_REGION |
                docker login --username AWS \
                --password-stdin $AWS_ACCOUNT_ID.dkr.ecr.$AWS_REGION.amazonaws.com
                '''
            }
        }

        stage('Push Image to ECR (Non-Prod)') {
            steps {
                sh '''
                docker tag $ECR_REPO:$IMAGE_TAG \
                $AWS_ACCOUNT_ID.dkr.ecr.$AWS_REGION.amazonaws.com/$ECR_REPO:$IMAGE_TAG

                docker push \
                $AWS_ACCOUNT_ID.dkr.ecr.$AWS_REGION.amazonaws.com/$ECR_REPO:$IMAGE_TAG
                '''
            }
        }

        stage('Sign Image (Cosign)') {
            environment {
                COSIGN_PASSWORD = credentials('cosign-key')
            }
            steps {
                sh '''
                cosign sign \
                $AWS_ACCOUNT_ID.dkr.ecr.$AWS_REGION.amazonaws.com/$ECR_REPO:$IMAGE_TAG
                '''
            }
        }
    }

    /* -------------------- POST -------------------- */

    post {
        success {
            echo "✅ Enterprise CI completed successfully"
        }
        failure {
            echo "❌ Pipeline blocked by Quality/Security gate"
        }
        always {
            cleanWs()
        }
    }
}
